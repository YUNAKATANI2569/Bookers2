<table class="table">
    <h1>User info</h1>
<%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', class: " pull-left profile-img", fallback: "no_image.jpg" %>
<tr>
 <td><class="profile-name">name          <%= user.name %></td>
 </tr>
 <tr>
  <td><p>introduction          <%= user.introduction %></p></td>
 </tr>
<tr>
<% if user.id == current_user.id %>
 <td><%= link_to "プロフィール編集", edit_user_path(user)  %></td>
 </tr>
</table>
<% end %></div>

