<h1>Users</h1>
 <p id="notice">
<%=  notice %>
</p>
<div class="container">  
  <div class="row">
    <div class="col-xs-3" >
      <%= render 'users/list2', user:current_user %>
        <%= render 'users/list', book:@book %>
      <div class="col-xs-9">
  <table class="table table-striped">


  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
<% @users.each do |user| %>

 <tr>
<td> <%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg', class: " pull-left profile-img", fallback: "no_image.jpg" %></td>
  <td><p><%= user.name  %></p></td>
  
  

  <td><%= link_to "Show", user_path(user) %></td>
</tr>

<% end %>
  </tbody>
</table>
  </div>
  </div>
</div>
</div>




