
    <h2>User info</h2>
<%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', class: " pull-left profile-img", fallback: "no_image.jpg" %>
<table class="table">
 <tbody><tr></tr> 
      <tr>
    	  <th>name</th>
    	  <th><class="profile-name">   <%= user.name %></th>
      </tr>
      <tr>
    	 <th>introduction</th>
    	 <th><%= user.introduction %></th>
      </tr>
       <tr>
      <% if user.id == current_user.id %>
      <th><%= link_to "プロフィール編集", edit_user_path(user)  %></th>
      <% end %>
      </tr>
      
 </tbody>
</table>


