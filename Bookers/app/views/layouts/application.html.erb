<!DOCTYPE html>
<html>
  
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  
              <div id="slidemenu">
                 
              <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
                <% if user_signed_in? %>
                 <h4>Bookers</h4>
                <li class="">
                    <span class="glyphicon glyphicon-home">
                    <%= link_to "Home", user_path(current_user.id) %></span>
                    <li class="">
                      <span class="glyphicon glyphicon-user" >
                    <%= link_to "Users", users_path %></span>
                    <li class="">
                      <span class="glyphicon glyphicon-book" >
                    <%= link_to "Books", books_path %></span>
                  <li class="">
                    <span class="glyphicon glyphicon-log-out">
                    <%= link_to "logout", destroy_user_session_path, method: :delete %></span>
                  </li>
                 
                <% else %>
                  <li class="">
                    <span class="glyphicon glyphicon-home"> 
                    <%= link_to "Home", root_path %></span>
                    <li class="">
                      <span class="glyphicon glyphicon-link">
                    <%= link_to "About", home_about_path %></span>
                  <li class="">
                    <span class="glyphicon glyphicon-edit" >
                    <%= link_to "Sign up", new_user_registration_path %></span>
                  </li>
                  <li class="">
                    <span class="glyphicon glyphicon-log-in">
                    <%= link_to "login", new_user_session_path %></span>
                  </li>
                <% end %>
              </ul>
            </div>
        </div>
      </nav>
    </div>

  <body>

    <%= yield %>
  </body>
  <footer>

</footer>
</html>
